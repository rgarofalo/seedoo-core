<odoo>
    <data noupdate="0">

        <record id="view_sd_dms_document_type_tree" model="ir.ui.view">
            <field name="name">view.sd.dms.document.type.list</field>
            <field name="model">sd.dms.document.type</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="active" />
                </list>
            </field>
        </record>

        <record id="view_sd_dms_document_type_form" model="ir.ui.view">
            <field name="name">view.sd.dms.document.type.form</field>
            <field name="model">sd.dms.document.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <group name="basic_fields" col="4">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sd_dms_document_type_search" model="ir.ui.view">
            <field name="name">view.sd.dms.document.type.search</field>
            <field name="model">sd.dms.document.type</field>
            <field name="arch" type="xml">
                <search>
                    <group>
                        <field name="name" />
                        <field name="active" />
                    </group>
                    <filter name="active_false"
                            string="Not Active"
                            domain="[('active', '=', False)]"
                    />
                </search>
            </field>
        </record>

    </data>
</odoo>
