<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record id="action_mail_mail_list_received_account" model="ir.actions.act_window">
            <field name="name">Emails Received</field>
            <field name="res_model">mail.mail</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('direction', '=', 'in'), ('account_id', '=', context.get('account_id', False))]</field>
            <field name="search_view_id" ref="view_mail_mail_search_received"/>
            <field name="context">{}</field>
        </record>

        <record id="action_mail_mail_list_received_account_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_mail_mail_tree_received"/>
            <field name="act_window_id" ref="action_mail_mail_list_received_account"/>
        </record>
        <record id="action_mail_mail_list_received_account_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_mail_mail_form"/>
            <field name="act_window_id" ref="action_mail_mail_list_received_account"/>
        </record>

        <record id="action_mail_mail_list_sent_account" model="ir.actions.act_window">
            <field name="name">Emails Sent</field>
            <field name="res_model">mail.mail</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('direction', '=', 'out'), ('account_id', '=', context.get('account_id', False))]</field>
            <field name="search_view_id" ref="view_mail_mail_search_sent"/>
        </record>

        <record id="action_mail_mail_list_sent_account_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_mail_mail_tree_sent"/>
            <field name="act_window_id" ref="action_mail_mail_list_sent_account"/>
        </record>
        <record id="action_mail_mail_list_sent_account_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_mail_mail_form"/>
            <field name="act_window_id" ref="action_mail_mail_list_sent_account"/>
        </record>

    </data>
</odoo>