<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Mail Client" data-key="fl_mail_client"
                         groups="base.group_system">
                        <div name="fl_mail_client_settings">

                            <h2>Configuration</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_fl_mail_client_pec"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_fl_mail_client_pec"/>
                                        <div class="text-muted">
                                            Enable the receipt and sending of certified e-mail
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_fl_mail_client_template" widget="fl_upgrade_boolean"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_fl_mail_client_template"/>
                                        <span class="label-enterprise">Enterprise</span>
                                        <div class="text-muted">
                                            Enable the creation of templates for outgoing emails
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="fetch_from_custom_folder" widget="fl_upgrade_boolean"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="fetch_from_custom_folder"/>
                                        <span class="label-enterprise">Enterprise</span>
                                        <div class="text-muted">
                                            Enable the fetch from a custom folder
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="move_processed_mail" widget="fl_upgrade_boolean"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="move_processed_mail"/>
                                        <span class="label-enterprise">Enterprise</span>
                                        <div class="text-muted">
                                            Enable the moving of the fetched emails to custom folders
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_fl_mail_client_history" widget="fl_upgrade_boolean"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_fl_mail_client_history"/>
                                        <span class="label-enterprise">Enterprise</span>
                                        <div class="text-muted" name="fl_mail_client_history">
                                            Enable the advanced management of the mail history
                                        </div>
                                        <div class="content-group"
                                             attrs="{'invisible': [('module_fl_mail_client_history', '=', False)]}"
                                             id="msg_module_fl_mail_client_history">
                                            <div class="text-warning mt16">
                                                <strong>Save</strong> this page and come back here
                                                to set up the feature.
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>