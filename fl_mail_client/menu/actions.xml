<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record id="action_mail_mail_list_received" model="ir.actions.act_window">
            <field name="name">Emails Received</field>
            <field name="res_model">mail.mail</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('direction', '=', 'in')]</field>
            <field name="search_view_id" ref="view_mail_mail_search_received"/>
        </record>
        <record id="action_mail_mail_list_received_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_mail_mail_tree_received"/>
            <field name="act_window_id" ref="action_mail_mail_list_received"/>
        </record>
        <record id="action_mail_mail_list_received_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_mail_mail_form"/>
            <field name="act_window_id" ref="action_mail_mail_list_received"/>
        </record>

        <record id="action_mail_mail_list_sent" model="ir.actions.act_window">
            <field name="name">Emails Sent</field>
            <field name="res_model">mail.mail</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('direction', '=', 'out')]</field>
            <field name="search_view_id" ref="view_mail_mail_search_sent"/>
        </record>
        <record id="action_mail_mail_list_sent_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_mail_mail_tree_sent"/>
            <field name="act_window_id" ref="action_mail_mail_list_sent"/>
        </record>
        <record id="action_mail_mail_list_sent_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_mail_mail_form"/>
            <field name="act_window_id" ref="action_mail_mail_list_sent"/>
        </record>

        <record id="action_fl_mail_client_account_list" model="ir.actions.act_window">
            <field name="name">Accounts</field>
            <field name="res_model">fl.mail.client.account</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_fetchmail_server_list" model="ir.actions.act_window">
            <field name="name">Inbox Mail Servers</field>
            <field name="res_model">fetchmail.server</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_ir_mail_server_list" model="ir.actions.act_window">
            <field name="name">Outgoing Mail Servers</field>
            <field name="res_model">ir.mail_server</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_fl_mail_client_account_permission_list" model="ir.actions.act_window">
            <field name="name">Account Permissions</field>
            <field name="res_model">fl.mail.client.account.permission</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_wizard_mail_compose_message_form" model="ir.actions.act_window">
            <field name="name">Compose</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mail.compose.message</field>
            <field name="binding_model_id" ref="mail.model_mail_compose_message"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="fl_mail_client.view_wizard_mail_compose_message_form"/>
            <field name="target">new</field>
            <field name="context">{'mail_compose_message': True}</field>
        </record>

        <record id="action_res_config_settings" model="ir.actions.act_window">
            <field name="name">General Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module': 'fl_mail_client'}</field>
        </record>

    </data>
</odoo>