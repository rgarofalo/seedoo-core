<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_protocollo_dashboard" inherit_id="sd_protocollo.template_protocollo_dashboard">

        <xpath expr="//t[@t-set='protocolli_bozza']" position="after">
            <t t-set="protocolli_da_fascicolare" t-value="protocolli_da_fascicolare"/>
        </xpath>

    </template>

    <template id="template_dashboard_protocolli_protocollati" name="protocollo_dashboard_fascicolazione"
              inherit_id="sd_protocollo.template_dashboard_protocolli_protocollati">

        <xpath expr="//div[@name='after_in_bozza']" position="after">
            <t t-if="protocolli_da_fascicolare is not False">
                <t t-call="sd_protocollo.temaplate_protocollo_row_kanban_button">
                    <t t-set="icon" t-value="'fa fa-th-list'"/>
                    <t t-set="value" t-value="protocolli_da_fascicolare"/>
                    <t t-set="action_name" t-value="'protocolli_da_fascicolare'"/>
                    <t t-set="protocollo_info" t-value="'Da Fascicolare'"/>
                </t>
            </t>
        </xpath>

    </template>


</odoo>