<openerp>
    <data>
        <template id="protocollo_style" name="Seedoo Style" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/seedoo_protocollo/static/src/css/protocollo.css"/>
                <!--<script type="text/javascript" src="/seedoo_protocollo/static/src/js/protocollo.js"></script>-->
            </xpath>
        </template>

        <record model='ir.ui.view' id='protocollo_sender_receiver_tree'>
            <field name="name">protocollo.sender_receiver.tree</field>
            <field name="model">protocollo.sender_receiver</field>
            <field name="arch" type="xml">
                <tree string="Mittenti/Destinatari">
                    <field name="type"/>
                    <field name="ammi_code"
                           attrs="{'required': [('type','=','government')], 'readonly': [('type','in',('legal', 'individual'))]}"
                           width="5%%" string="Cod. iPA"/>
                    <field name="ident_code"
                           attrs="{'readonly': [('type','in',('legal', 'individual'))]}"
                           width="5%%"
                           string="Cod. AOO"/>
                    <field name="name"
                           string="Nome Cognome / Ragione Sociale"/>
                    <field name="street"/>
                    <field name="zip"/>
                    <field name="city"/>
                    <field name="pec_mail"/>
                    <field name="email"/>
                    <field name="protocol_state" invisible="1"/>
                    <field name="pec_invio_status" colspan="4" options="{'no_open': True}" class="col_inviato_status"/>
                    <field name="pec_accettazione_status" colspan="4" options="{'no_open': True}" class="col_accettato_status"/>
                    <field name="pec_consegna_status" colspan="4" options="{'no_open': True}" class="col_consegnato_status"/>
                    <field name="pec_errore_consegna_status" colspan="4" options="{'no_open': True}" class="col_consegnato_status"/>
                    <field name="pec_non_accettazione_status" colspan="4" options="{'no_open': True}" class="col_consegnato_status"/>
                </tree>
            </field>
        </record>

        <record model='ir.ui.view' id='protocollo_sender_receiver_form'>
            <field name="name">protocollo.sender_receiver.form</field>
            <field name="model">protocollo.sender_receiver</field>
            <field name="arch" type="xml">
                <form string="Mittenti/Destinatari">
                    <sheet>
                        <group colspan="4" col="4">
                            <div class="box-anagrafica">
                                <group>
                                    <field name="partner_id" on_change="on_change_partner(partner_id)" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                                </group>
                                <group class="general" string="Info Anagrafiche" colspan="4" col="4">
                                    <field name="type" on_change="on_change_type(type)" context="{'is_type_selection':True}" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                    <newline/>
                                    <field name="pa_type" placeholder="" attrs="{'invisible': [('type','!=', 'government')], 'readonly': [('partner_id','!=',False)]}" on_change="on_change_pa_type(pa_type)"/>
                                    <newline/>
                                    <field name="ammi_code" attrs="{'invisible': ['|', ('type','!=', 'government'), ('pa_type','!=', 'pa')], 'readonly': [('partner_id','!=',False)]}"/>
                                    <newline/>
                                    <field name="ident_code" attrs="{'invisible': ['|', ('type','!=', 'government'), ('pa_type','!=', 'aoo')], 'readonly': [('partner_id','!=',False)]}"/>
                                    <newline/>
                                    <field name="ipa_code" attrs="{'invisible': ['|', ('type','!=', 'government'), ('pa_type','!=', 'uo')], 'readonly': [('partner_id','!=',False)]}" />
                                    <newline/>
                                    <field name="name" attrs="{'readonly': [('partner_id','!=',False)]}" class="name_protocollo_sender_receiver_form"/>
                                </group>

                                <newline/>
                                <group>
                                    <group>
                                        <field name="title" domain="[('domain','=',title_domain)]" attrs="{'readonly': [('partner_id','!=',False)]}" options="{'no_create': True, 'no_open': True}"/>
                                        <field name="tax_code" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                        <field name="vat" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                        <label for="street" string="Indirizzo" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                        <div>
                                            <field name="street" placeholder="Via..." class="street_protocollo_sender_receiver_form" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                            <field name="street2" class="street2_protocollo_sender_receiver_form" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                            <div class="address_format" attrs="{'readonly': [('partner_id','!=',False)]}">
                                                <field name="city" placeholder="CittÃ " style="width: 40%%" class="city_protocollo_sender_receiver_form" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                                <field name="state_id" placeholder="Provincia" style="width: 37%%" options="{'no_open': True}" class="oe_no_button city_protocollo_sender_receiver_form" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                                <field name="zip" placeholder="CAP" style="width: 20%%" class="zip_protocollo_sender_receiver_form" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                            </div>
                                            <field name="country_id" placeholder="Nazione" options="{'no_open': True, 'no_create': True}" class="oe_no_button country_id_protocollo_sender_receiver_form" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                        </div>
                                        <field name="website" widget="url" placeholder="es. www.odoo.com" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                    </group>
                                    <group>
                                        <field name="function" placeholder="ad esempio, Direttore Vendite"
                                               attrs="{'invisible': [('type','!=', 'individual')], 'readonly': [('partner_id','!=',False)]}"/>
                                        <field name="phone" class="phone_protocollo_sender_receiver_form" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                        <field name="mobile" class="mobile_protocollo_sender_receiver_form" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                        <field name="fax" class="fax_protocollo_sender_receiver_form" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                        <field name="email" widget="email" on_change="on_change_email(email, save_partner)" class="email_protocollo_sender_receiver_form" attrs="{'readonly': [('partner_id','!=',False)]}"/>
                                        <field name="pec_mail" widget="email" on_change="on_change_pec_mail(pec_mail, save_partner)"
                                               attrs="{'required':[('add_pec_receiver_visibility','=',True)], 'readonly': [('partner_id','!=',False)]}" class="pec_mail_protocollo_sender_receiver_form"/>
                                        <field name="title_domain" invisible="1"/>
                                    </group>
                                </group>


                                <newline/>
                                <group class="shipping" string="Info di Spedizione" colspan="4" col="4" attrs="{'invisible':[('send_date','=',False)]}">
                                    <field name="send_date"/>
                                    <field name="send_type" invisible="1"/>
                                    <field name="protocol_state" invisible="1"/>
                                    <field name="protocol_pec" string="PEC" invisible="1"/>
                                    <field name="protocol_sharedmail" string="Sharedmail" invisible="1"/>
                                </group>

                                <newline/>
                                <group class="note" string="Note" colspan="4" col="4" attrs="{'invisible':[('notes','=',False)]}">
                                    <field name="notes" nolabel="1" colspan="4"/>
                                </group>
                                <group nolabel="1" colspan="4" col="4" attrs="{'invisible': [('partner_id','!=',False)]}">
                                    <field name="save_partner" on_change="on_change_save_partner(pec_mail, email, save_partner)"
                                           attrs="{'readonly': [('partner_id','!=',False)], 'invisible': [('partner_id','!=',False)]}"
                                           groups="base.group_partner_manager"
                                    />
                                </group>
                            </div>
                            <newline/>
                            <group string="Info E-mail" col="4" attrs="{'invisible':[('protocol_sharedmail','!=',True)]}" nolabel="1">
                                <field name="sharedmail_messaggio_ids" widget="many2many_kanban" nolabel="1" class="container_messaggi_pec">
                                    <kanban quick_create="false" create="false">
                                        <field name="direction_sharedmail"/>
                                        <field name="sharedmail_state"/>
                                        <field name="date"/>
                                        <field name="id"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div style="position: relative">
                                                    <h3>
                                                        <t t-if="record.sharedmail_state.raw_value === 'notification'">NOTIFICA PROTOCOLLAZIONE</t>
                                                        <t t-if="record.direction_sharedmail.raw_value === 'in' and record.sharedmail_state.raw_value != 'notification'">ricevuto</t>
                                                        <t t-if="record.direction_sharedmail.raw_value === 'out' and record.sharedmail_state.raw_value != 'notification'">inviato</t>
                                                    </h3>
                                                    <div class="oe_module_vignette">
                                                        <div class="oe_module_desc pec_container">
                                                            <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border item_box" >
                                                                <table class="oe_kanban_table">
                                                                    <tr>
                                                                        <td class="oe_kanban_messaggio pec_button_col" align="left" valign="middle">
                                                                            <button name="go_to_sharedmail_message_action" col="1" type="object"
                                                                                    t-attf-data-context="{'message_ref' : {{record.id.raw_value}}}"
                                                                                    icon="gtk-go-forward" class="oe_highlight"/>

                                                                        </td>
                                                                        <td class="pec_descr_col">
                                                                            <h4>Messaggio</h4>
                                                                            <p><field name="date"/></p>
                                                                            <span t-att-class="record.direction_sharedmail.raw_value"/>
                                                                        </td>
                                                                    </tr>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </group>
                            <newline/>
                            <group string="Info PEC" col="4" attrs="{'invisible':[('protocol_pec','!=',True)]}" nolabel="1">
                                <field name="pec_messaggio_ids" widget="many2many_kanban" nolabel="1" class="container_messaggi_pec">
                                    <kanban quick_create="false" create="false">
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="messaggio_ref"/>
                                        <field name="accettazione_ref"/>
                                        <field name="consegna_ref"/>
                                        <field name="errore_consegna_ref"/>
                                        <field name="messaggio_id"/>
                                        <field name="messaggio_direction"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div style="position: relative">
                                                    <h3><field name="type"/>
                                                        <t t-if="(record.type.raw_value === 'messaggio' or record.type.raw_value === 'annullamento') and record.messaggio_direction.raw_value === 'in'">ricevuto</t>
                                                        <t t-if="(record.type.raw_value === 'messaggio' or record.type.raw_value === 'annullamento')  and record.messaggio_direction.raw_value === 'out'">inviato</t>
                                                        <t t-if="record.type.raw_value === 'conferma' and record.messaggio_direction.raw_value === 'in'">ricevuta</t>
                                                        <t t-if="record.type.raw_value === 'conferma' and record.messaggio_direction.raw_value === 'out'">inviata</t>
                                                    </h3>
                                                    <div class="oe_module_vignette">
                                                        <div class="oe_module_desc pec_container">
                                                            <t t-if="record.messaggio_ref.raw_value">
                                                                <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border item_box" >
                                                                    <table class="oe_kanban_table">
                                                                        <tr>
                                                                            <td class="oe_kanban_messaggio pec_button_col" align="left" valign="middle">
                                                                                <field name="messaggio_ref" invisible="1"/>
                                                                                <button name="go_to_messaggio_action" col="1" type="object"
                                                                                        t-attf-data-context="{'pec_ref' : {{record.messaggio_ref.raw_value[0]}}}"
                                                                                        icon="gtk-go-forward" class="oe_highlight"/>

                                                                            </td>
                                                                            <td class="pec_descr_col">
                                                                                <h4>Messaggio</h4>
                                                                                <p><field name="messaggio_ora"/></p>
                                                                                <span t-att-class="record.messaggio_direction.raw_value"/>
                                                                            </td>
                                                                        </tr>
                                                                    </table>
                                                                </div>
                                                            </t>
                                                            <t t-if="record.accettazione_ref.raw_value">
                                                                <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border item_box">
                                                                    <table class="oe_kanban_table">
                                                                        <tr>
                                                                            <td class="oe_kanban_accettazione pec_button_col" align="left" valign="middle">
                                                                                <field name="accettazione_ref" invisible="1"/>
                                                                                <button name="go_to_accettazione_action" col="1" type="object"
                                                                                        t-attf-data-context="{'pec_ref' : {{record.accettazione_ref.raw_value[0]}}}"
                                                                                        icon="gtk-go-forward" class="oe_highlight" attrs="{'invisible': [('accettazione_ref', '=', False)]}"/>
                                                                            </td>
                                                                            <td class="pec_descr_col">
                                                                                <h4>Ricevuta di accettazione</h4>
                                                                                <p><field name="accettazione_ora"/></p>
                                                                                <span class="in"/>
                                                                            </td>
                                                                        </tr>
                                                                    </table>
                                                                </div>
                                                            </t>
                                                            <t t-if="record.consegna_ref.raw_value">
                                                                <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border item_box">
                                                                    <table class="oe_kanban_table">
                                                                        <tr>
                                                                            <td class="oe_kanban_consegna pec_button_col" align="left" valign="middle">
                                                                                <field name="consegna_ref" invisible="1"/>
                                                                                <button name="go_to_consegna_action" col="1" type="object"
                                                                                        t-attf-data-context="{'pec_ref' : {{record.consegna_ref.raw_value[0]}}}"
                                                                                        icon="gtk-go-forward" class="oe_highlight" attrs="{'invisible': [('consegna_ref', '=', False)]}"/>
                                                                            </td>
                                                                            <td class="pec_descr_col">
                                                                                <h4>Ricevuta di avvenuta consegna</h4>
                                                                                <p><field name="consegna_ora"/></p>
                                                                                <span class="in"/>
                                                                            </td>
                                                                        </tr>
                                                                    </table>
                                                                </div>
                                                            </t>
                                                            <t t-if="record.errore_consegna_ref.raw_value">
                                                                <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border item_box">
                                                                    <table class="oe_kanban_table">
                                                                        <tr>
                                                                            <td class="oe_kanban_errore_consegna pec_button_col" align="left" valign="middle">
                                                                                <field name="errore_consegna_ref" invisible="1"/>
                                                                                <button name="go_to_errore_consegna_action" col="1" type="object"
                                                                                        t-attf-data-context="{'pec_ref' : {{record.errore_consegna_ref.raw_value[0]}}}"
                                                                                        icon="gtk-go-forward" class="oe_highlight" attrs="{'invisible': [('errore_consegna_ref', '=', False)]}"/>
                                                                            </td>
                                                                            <td class="pec_descr_col">
                                                                                <h4>Ricevuta di errore consegna</h4>
                                                                                <p><field name="errore_consegna_ora"/></p>
                                                                                <span class="in"/>
                                                                            </td>
                                                                        </tr>
                                                                    </table>
                                                                </div>
                                                            </t>
                                                           <t t-if="record.non_accettazione_ref.raw_value">
                                                                <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border item_box">
                                                                    <table class="oe_kanban_table">
                                                                        <tr>
                                                                            <td class="oe_kanban_non_accettazione pec_button_col" align="left" valign="middle">
                                                                                <field name="non_accettazione_ref" invisible="1"/>
                                                                                <button name="go_to_non_accettazione_action" col="1" type="object"
                                                                                        t-attf-data-context="{'pec_ref' : {{record.non_accettazione_ref.raw_value[0]}}}"
                                                                                        icon="gtk-go-forward" class="oe_highlight" attrs="{'invisible': [('non_accettazione_ref', '=', False)]}"/>
                                                                            </td>
                                                                            <td class="pec_descr_col">
                                                                                <h4>Ricevuta di non accettazione</h4>
                                                                                <p><field name="non_accettazione_ora"/></p>
                                                                                <span class="in"/>
                                                                            </td>
                                                                        </tr>
                                                                    </table>
                                                                </div>
                                                            </t>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </group>
                            <newline/>
                            <field name="add_pec_receiver_visibility" invisible="1"/>

                            <footer class="sender_receiver_footer">
                                <div class="oe_edit_only">

                                </div>
                            </footer>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model='ir.ui.view' id='protocollo_sender_receiver_kanban'>
            <field name="name">protocollo.sender_receiver.kanban</field>
            <field name="model">protocollo.sender_receiver</field>
            <field name="arch" type="xml">
                <kanban create="0">
                    <field name="source"/>
                    <field name="type"/>
                    <field name="pec_invio_status"/>
                    <field name="pec_accettazione_status"/>
                    <field name="pec_consegna_status"/>
                    <field name="pec_errore_consegna_status"/>
                    <field name="pec_non_accettazione_status"/>
                    <field name="pec_conferma_status"/>
                    <field name="pec_numero_invii"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border item_box" >
                                <button t-if="! read_only_mode"
                                        name="elimina_mittente_destinatario"
                                        string="x"
                                        type="object"
                                        class="oe_highlight_positive btn_seedoo btn_rimuovi_mittente"
                                />
                                <a type="open" class="protocollo_sr_box">
                                    <table class="oe_kanban_table">
                                        <tr>
                                            <td class="oe_kanban_messaggio pec_button_col" align="left" valign="middle">
                                                <div class="icon_item_type">
                                                   <div t-att-class="record.type.raw_value">
                                                       <span>Tipo</span>
                                                   </div>
                                                </div>
                                            </td>
                                            <td>
                                                <h3><field name="name"/></h3>
                                                <t t-if="record.email.raw_value">
                                                    <p>
                                                        <i class="fa fa-envelope-o" aria-hidden="true"></i>
                                                        <field name="email"/>
                                                    </p>
                                                </t>
                                                <t t-if="record.pec_mail.raw_value">
                                                    <p>
                                                        <i class="fa fa-envelope" aria-hidden="true"></i>
                                                        <field name="pec_mail"/>
                                                    </p>
                                                </t>
                                                <t t-if="record.pec_invio_status.raw_value or record.sharedmail_numero_invii.raw_value">
                                                    <div class="icon_status icon_messaggio_status"><span>Inviato</span></div>
                                                </t>
                                                <t t-if="record.pec_accettazione_status.raw_value">
                                                    <div class="icon_status icon_accettazione_status"><span>Accettato</span></div>
                                                </t>
                                                <t t-if="record.pec_consegna_status.raw_value">
                                                    <div class="icon_status icon_consegna_status"><span>Consegna</span></div>
                                                </t>
                                                <t t-if="record.pec_errore_consegna_status.raw_value">
                                                    <div class="icon_status icon_errore_consegna_status"><span>Errore Consegna</span></div>
                                                </t>
                                                <t t-if="record.pec_non_accettazione_status.raw_value">
                                                    <div class="icon_status icon_non_accettazione_status"><span>Non Accettato</span></div>
                                                </t>
                                                <t t-if="record.source.raw_value=='sender' and record.pec_conferma_status.raw_value">
                                                    <div class="icon_status icon_conferma_status"><span>Conferma</span></div>
                                                </t>
                                                <t t-if="record.source.raw_value=='receiver' and record.pec_conferma_status.raw_value">
                                                    <div class="icon_status icon_conferma_out_status"><span>Conferma</span></div>
                                                </t>
                                                <t t-if="record.pec_numero_invii.raw_value and record.pec_numero_invii.raw_value > 1">
                                                    <div class="icon_numero_invii"><field name="pec_numero_invii"/></div>
                                                </t>
                                                <t t-if="record.sharedmail_numero_invii.raw_value and record.sharedmail_numero_invii.raw_value > 1">
                                                    <div class="icon_numero_invii"><field name="sharedmail_numero_invii"/></div>
                                                </t>
                                            </td>
                                        </tr>
                                    </table>
                                </a>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</openerp>