<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sd_dms_titolario_titolario_tree" model="ir.ui.view">
            <field name="name">view.sd.dms.titolario.titolario.tree</field>
            <field name="model">sd.dms.titolario.titolario</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="voce_titolario_ids"/>
                </tree>
            </field>
        </record>

        <record id="view_sd_dms_titolario_titolario_form" model="ir.ui.view">
            <field name="name">view.sd.dms.titolario.titolario.form</field>
            <field name="model">sd.dms.titolario.titolario</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(action_sd_dms_titolario_voce_titolario_list)d"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    context="{'default_titolario_id': id}"
                                    type="action">
                                <field name="count_voci_titolario" widget="statinfo" string="Voci Titolario"/>
                            </button>
                        </div>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="name"/>
                            <field name="company_id"
                                   groups="base.group_multi_company"
                                   options="{'no_open': True, 'no_create': True}"
                            />
                            <field name="state" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_sd_dms_titolario_titolario_search" model="ir.ui.view">
            <field name="name">view.sd.dms.titolario.titolario.search</field>
            <field name="model">sd.dms.titolario.titolario</field>
            <field name="arch" type="xml">
                <search string="Search Partner">
                    <field name="name"/>
                    <field name="state"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

    </data>
</odoo>