<templates>

    <t t-name="fl_web_preview.PreviewWrapper">
        <div class="fl_web_preview_wrapper"/>
    </t>

    <t t-name="fl_web_preview.PreviewContent">
        <div class="fl_web_preview_content">
            <t t-raw="0"/>
        </div>
    </t>

    <t t-name="fl_web_preview.PreviewContentUnsupported">
        <t t-call="fl_web_preview.PreviewContent">
            <div class="row fl_web_preview_unsupported">
                <div class="d-none d-sm-block col-sm-3 pt-3 pb-3">
                    <div class="o_image" t-att-data-mimetype="widget.mimetype"/>
                </div>
                <div class="col-12 col-sm-8">
                    <h3 class="pb-2">Unsupported File</h3>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Filename:</td>
                                <td>
                                    <t t-esc="widget.filename"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Mimetype:</td>
                                <td>
                                    <t t-esc="widget.mimetype"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-center text-sm-right">
                        <a class="float-sm-righ btn btn-outline-primary" t-att-href="widget.url">Download</a>
                    </div>
                </div>
            </div>
        </t>
    </t>

    <t t-name="fl_web_preview.PreviewContentPDF">
        <t t-call="fl_web_preview.PreviewContent">
            <div class="fl_web_preview_pdf">
                <iframe t-att-src="widget.viewer_url"
                        allowfullscreen="allowfullscreen"
                        webkitallowfullscreen="webkitallowfullscreen">
                </iframe>
            </div>
        </t>
    </t>

</templates>