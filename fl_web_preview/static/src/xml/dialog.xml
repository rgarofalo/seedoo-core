<templates>

<t t-name="fl_web_preview.PreviewDialog">
	<div class="modal fade">
		<div class="modal-dialog modal-lg fl_web_preview_dialog">
      		<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">Preview</h4>
					<div class="fl_web_preview_buttons">
						<t t-call="fl_web_preview.PreviewActions"/>
						<button type="button" class="close" data-dismiss="modal" title="Close">
							<i class="fa fa-times" />
						</button>
						<button type="button" class="fl_web_preview_maximize_btn" title="Maximize">
							<i class="fa fa-window-maximize" />
						</button>
		                <button type="button" class="fl_web_preview_minimize_btn" title="Minimize">
		                	<i class="fa fa-window-minimize" />
		                </button>
					</div>
				</div>
				<div class="modal-body">
					<t t-call="fl_web_preview.PreviewWrapper"/>
				</div>
				<div class="modal-footer">
					<t t-call="fl_web_preview.PreviewPager"/>
				</div>
      		</div>
		</div>
	</div>
</t>

