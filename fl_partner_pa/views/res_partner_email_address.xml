<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_res_partner_email_address_tree" model="ir.ui.view">
            <field name="name">view.res.partner.email.address.list</field>
            <field name="model">res.partner.email.address</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="type"/>
                    <field name="email_address"/>
                </list>
            </field>
        </record>

        <record id="view_res_partner_email_address_form" model="ir.ui.view">
            <field name="name">view.res.partner.email.address.form</field>
            <field name="model">res.partner.email.address</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="type"/>
                            <field name="email_address"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>