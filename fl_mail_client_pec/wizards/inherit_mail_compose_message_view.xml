<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record id="view_wizard_mail_compose_message_form" model="ir.ui.view">
            <field name="name">view.wizard.mail.compose.message.form</field>
            <field name="model">mail.compose.message</field>
            <field name="inherit_id" ref="fl_mail_client.view_wizard_mail_compose_message_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='account_id']" position="after">
                    <field name="account_pec" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='email_bcc_ids']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('account_pec', '=', True), ('composition_mode', '!=', 'comment')]}</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>