<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record id="view_fetchmail_server_form" model="ir.ui.view">
            <field name="name">view.fetchmail.server.form</field>
            <field name="model">fetchmail.server</field>
            <field name="inherit_id" ref="fl_mail_client.view_fetchmail_server_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='mail_client']" position="after">
                    <field name="mail_client_fetch_emails_from_server_pec"
                           invisible="[('mail_client_account_pec','!=',True)]"
                    />
                    <field name="mail_client_account_pec"
                           invisible="1"
                    />
                </xpath>

            </field>
        </record>

    </data>
</odoo>