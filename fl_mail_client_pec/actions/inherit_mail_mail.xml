<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record id="action_mail_mail_list_receipt" model="ir.actions.act_window">
            <field name="name">Receipts</field>
            <field name="res_model">mail.mail</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('pec_mail_parent_id', '=', context.get('mail_id', False))]</field>
            <field name="search_view_id" ref="fl_mail_client.view_mail_mail_search_received"/>
            <field name="context">{}</field>
        </record>

        <record id="action_mail_mail_list_received_account_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="fl_mail_client.view_mail_mail_tree_received"/>
            <field name="act_window_id" ref="action_mail_mail_list_receipt"/>
        </record>
        <record id="action_mail_mail_list_received_account_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="fl_mail_client.view_mail_mail_form"/>
            <field name="act_window_id" ref="action_mail_mail_list_receipt"/>
        </record>

    </data>
</odoo>