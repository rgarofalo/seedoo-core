            <field name="category_id" ref="category_sd_protocollo"/>
            <field name="implied_ids" eval="[(6, 0, [
                ref('base.group_user')
            ])]"/>
        </record>

        <record id="group_sd_protocollo_protocollatore" model="res.groups">
            <field name="name">Protocollatore</field>
            <field name="category_id" ref="category_sd_protocollo"/>
            <field name="implied_ids" eval="[(6, 0, [
                ref('group_sd_protocollo_assegnatario')
            ])]"/>
        </record>

        <record id="group_sd_protocollo_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="category_sd_protocollo"/>
            <field name="implied_ids" eval="[(6, 0, [
                ref('group_sd_protocollo_protocollatore')
