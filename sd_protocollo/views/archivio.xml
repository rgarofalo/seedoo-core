<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sd_protocollo_archivio_tree" model="ir.ui.view">
            <field name="name">view.sd.protocollo.archivio.tree</field>
            <field name="model">sd.protocollo.archivio</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nome"/>
                    <field name="corrente"/>
                </tree>
            </field>
        </record>

        <record id="view_sd_protocollo_archivio_form" model="ir.ui.view">
            <field name="name">view.sd.protocollo.archivio.form</field>
            <field name="model">sd.protocollo.archivio</field>
            <field name="arch" type="xml">
                <form>
                    <header/>
                    <sheet>
                        <group name="group_invisible" invisible="1">
                        </group>
                        <div name="button_box" class="oe_button_box">
                            <button name="show_protocollo_ids_action"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-gavel"
                            >
                                <field string="Protocolli"
                                       name="protocollo_count"
                                       widget="statinfo"
                                />
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Corrente" bg_color="bg-info"
                                attrs="{'invisible': [('corrente', '=', False)]}"/>
                        <group>
                            <group>
                                <field name="nome"/>
                                <field name="corrente"/>
                            </group>
                            <group>
                                <field name="company_id"
                                       groups="base.group_multi_company"
                                       options='{"no_open":True, "no_create":True}'
                                />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sd_protocollo_archivio_search" model="ir.ui.view">
            <field name="name">view.sd.protocollo.archivio.search</field>
            <field name="model">sd.protocollo.archivio</field>
            <field name="arch" type="xml">
                <search string="Search archivio">
                    <field name="nome"/>
                    <field name="corrente"/>
                    <filter string="Corrente" name="corrente" domain="[('corrente', '=', True)]"/>
                </search>
            </field>
        </record>

    </data>
</odoo>