<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sd_protocollo_mezzo_trasmissione_tree" model="ir.ui.view">
            <field name="name">view.sd.protocollo.mezzo.trasmissione.list</field>
            <field name="model">sd.protocollo.mezzo.trasmissione</field>
            <field name="arch" type="xml">
                <list>
                    <field name="ordinamento" widget="handle"/>
                    <field name="nome" widget="icon_label" options="{'icon_field':'icon','icon_color_field':'icon_color'}" class="sd-mezzo-trasmissione"/>
                    <field name="icon"/>
                    <field name="icon_color"/>
                </list>
            </field>
        </record>

        <record id="view_sd_protocollo_mezzo_trasmissione_form" model="ir.ui.view">
            <field name="name">view.sd.protocollo.mezzo.trasmissione.form</field>
            <field name="model">sd.protocollo.mezzo.trasmissione</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="nome"/>
                            <field name="company_id"
                                   groups="base.group_multi_company"
                                   options="{'no_open': True, 'no_create': True}"
                            />
                            <field name="icon"/>
                            <field name="icon_color" widget="color"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_sd_protocollo_mezzo_trasmissione_search" model="ir.ui.view">
            <field name="name">view.sd.protocollo.mezzo.trasmissione.search</field>
            <field name="model">sd.protocollo.mezzo.trasmissione</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nome"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

    </data>
</odoo>