<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_res_users_search" model="ir.ui.view">
            <field name="name">view.res.users.search</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <search string="Users">
                    <field name="name" string="Users"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <searchpanel>
                        <field name="fl_set_set_ids"
                               icon="fa-building"
                               enable_counters="1"
                               options="{'disable_childof_domain_onexpand': True}"
                        />
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="view_fl_set_res_users_form" model="ir.ui.view">
            <field name="name">view.fl.set.res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <field name="id" invisible="1"/>
                    <button name="%(action_sd_dms_set_res_users_list)d"
                            class="oe_stat_button"
                            icon="fa-building"
                            invisible="[('count_user_set', '=', 0)]"
                            context="{'user_id': id}"
                            type="action">
                        <field name="count_user_set" widget="statinfo" string="Set"/>
                    </button>
                </xpath>
            </field>
        </record>

        <record id="view_fl_set_res_users_custom_form" model="ir.ui.view">
            <field name="name">view.fl.set.res.users.custom.form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h3>
                            <field name="name"/>
                        </h3>
                        <label for="fl_set_set_ids" string="Uffici"/>
                        <field name="fl_set_set_ids" nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_fl_set_res_users_kanban" model="ir.ui.view">
            <field name="name">view.fl.set.res.users.kanban</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_res_users_kanban"/>
            <field name="arch" type="xml">
                <field name="login_date" position="after">
                    <field name="is_online"/>
                </field>
                <xpath expr="//kanban//t//main//div" position="replace">
                    <div>
                        <div t-if="record.is_online.raw_value" class="text-success float-end mb4">
                           <i class="fa fa-circle" role="img" aria-label="Online" title="Online"></i>
                        </div>
                        <div t-else="" class="text-danger float-end mb4">
                            <i class="fa fa-circle" role="img" aria-label="Offline" title="Offline"></i>
                        </div>
                        <field class="fw-bold" name="name"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>