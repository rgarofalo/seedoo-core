<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sd_dms_contact_email_address_tree" model="ir.ui.view">
            <field name="name">view.sd.dms.contact.email.address.list</field>
            <field name="model">sd.dms.contact.email.address</field>
            <field name="inherit_id" ref="sd_dms.view_sd_dms_contact_email_address_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='email_address']" position="after">
                    <field name="use_in_sending"
                           readonly="1"
                           invisible="context.get('use_in_sending_invisible', True)"
                    />
                </xpath>

            </field>
        </record>

        <record id="view_sd_dms_contact_email_address_form" model="ir.ui.view">
            <field name="name">view.sd.dms.contact.email.address.form</field>
            <field name="model">sd.dms.contact.email.address</field>
            <field name="inherit_id" ref="sd_dms.view_sd_dms_contact_email_address_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='email_address']" position="after">
                    <field name="use_in_sending"
                           readonly="1"
                           invisible="context.get('use_in_sending_invisible', True)"
                    />
                </xpath>

            </field>
        </record>

    </data>
</odoo>