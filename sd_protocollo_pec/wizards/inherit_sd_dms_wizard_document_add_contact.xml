<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sd_dms_wizard_document_add_contact_form" model="ir.ui.view">
            <field name="name">view.sd.dms.wizard.document.add.contact.form</field>
            <field name="model">sd.dms.wizard.document.add.contact</field>
            <field name="inherit_id" ref="sd_dms.view_sd_dms_wizard_document_add_contact_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='typology']" position="after">
                    <field name="use_in_sending_invisible"/>
                </xpath>

                <xpath expr="//field[@name='email']" position="before">
                    <separator attrs="{'invisible': [('fiscalcode_invisible', '=', True),('function_invisible', '=', True)]}"/>
                </xpath>

                <xpath expr="//field[@name='email']" position="after">
                    <field name="email_use_in_sending"
                           widget="boolean_toggle"
                           attrs="{'invisible': ['|', ('use_in_sending_invisible', '=', True), ('email', '=', False)]}"
                           force_save="1"
                    />
                    <separator/>
                </xpath>

                <xpath expr="//field[@name='pec_mail']" position="after">
                    <field name="pec_mail_use_in_sending"
                           widget="boolean_toggle"
                           attrs="{'invisible': ['|', ('use_in_sending_invisible', '=', True), ('pec_mail', '=', False)]}"
                           force_save="1"
                    />
                    <separator/>
                </xpath>

                <xpath expr="//field[@name='email_amm']" position="after">
                    <field name="email_amm_use_in_sending"
                           widget="boolean_toggle"
                           attrs="{'invisible': ['|', ('use_in_sending_invisible', '=', True), ('email_amm', '=', False)]}"
                           force_save="1"
                    />
                    <separator/>
                </xpath>

                <xpath expr="//field[@name='pec_mail_amm']" position="after">
                    <field name="pec_mail_amm_use_in_sending"
                           widget="boolean_toggle"
                           attrs="{'invisible': ['|', ('use_in_sending_invisible', '=', True), ('pec_mail_amm', '=', False)]}"
                           force_save="1"
                    />
                </xpath>

                <xpath expr="//field[@name='contact_pa_email']" position="after">
                    <field name="contact_pa_email_use_in_sending"
                           widget="boolean_toggle"
                           attrs="{'invisible': ['|', ('use_in_sending_invisible', '=', True), ('contact_pa_email', '=', False)]}"
                           force_save="1"
                    />
                    <separator/>
                </xpath>

                <xpath expr="//field[@name='contact_pa_pec_mail']" position="after">
                    <field name="contact_pa_pec_mail_use_in_sending"
                           widget="boolean_toggle"
                           attrs="{'invisible': ['|', ('use_in_sending_invisible', '=', True), ('contact_pa_pec_mail', '=', False)]}"
                           force_save="1"
                    />
                </xpath>

            </field>
        </record>



        <record id="view_sd_dms_wizard_document_add_contact_digital_domicile_form" model="ir.ui.view">
            <field name="name">view.sd.dms.wizard.document.add.contact.digital.domicile.form</field>
            <field name="model">sd.dms.wizard.document.add.contact.digital.domicile</field>
            <field name="inherit_id" ref="sd_dms.view_sd_dms_wizard_document_add_contact_digital_domicile_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='contact_digital_domicile_id']" position="before">
                    <field name="use_in_sending"
                           readonly="1"
                           invisible="context.get('use_in_sending_invisible', True)"
                    />
                </xpath>

            </field>
        </record>
        <record id="view_sd_dms_wizard_document_add_contact_digital_domicile_tree" model="ir.ui.view">
