<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="view_sd_protocollo_protocollo_form" model="ir.ui.view">
            <field name="name">view.sd.protocollo.protocollo.form</field>
            <field name="model">sd.protocollo.protocollo</field>
            <field name="inherit_id" ref="sd_protocollo.view_sd_protocollo_protocollo_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='protocollo_completa_lavorazione_action']" position="before">
                    <button name="protocollo_classifica_action"
                            string="Classifica"
                            type="object"
                            class="oe_highlight oe_read_only btn_sd"
                            attrs="{'invisible': [('button_classifica_invisible', '=', True)]}"
                            context="{'wizard_label': 'Classifica'}"
                    />
                </xpath>

                <xpath expr="//field[@name='documento_id_document_type_id']" position="before">
                    <field name="documento_id_voce_titolario_id"
                           string="Classificazione"
                           attrs="{'readonly': [('documento_id_voce_titolario_readonly', '=', True)],'required':[('documento_id_voce_titolario_required','=',True)]}"
                           widget="ztree_select"
                           options="{
                                'ztree_parent_key': 'parent_id',
                                'ztree_expend_level': '1',
                                'ztree_name_field': 'complete_name',
                                'ztree_name_field_readonly': 'path_name',
                                'ztree_title_field': 'path_name',
                                'ztree_only_child': 'only_child',
                                'ztree_child_key': 'child_ids',
                                'ztree_custom_class': 'no-hover-titolario',
                                'order': 'sequence',
                                'no_open': True,
                                'no_create': True
                           }"
                           context="{'protocollo_id': id, 'voce_titolario_id': documento_id_voce_titolario_id}"
                           colspan="4"
                    />
                </xpath>

                <xpath expr="//group[@name='group_invisible']" position="inside">
                    <field name="button_classifica_invisible" invisible="1"/>
                    <field name="documento_id_voce_titolario_readonly" invisible="1"/>
                    <field name="documento_id_voce_titolario_required" invisible="1"/>
                </xpath>

            </field>
        </record>

        <record id="view_sd_protocollo_protocollo_search" model="ir.ui.view">
            <field name="name">view.sd.protocollo.protocollo.search</field>
            <field name="model">sd.protocollo.protocollo</field>
            <field name="inherit_id" ref="sd_protocollo.view_sd_protocollo_protocollo_search"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='mezzo_trasmissione_id']" position="after">
                    <field name="documento_id_voce_titolario_id"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>